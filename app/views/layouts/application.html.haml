!!! Strict
%html{html_attrs(lang='de-DE')}
  %head
    = csrf_meta_tag
    %title
      = 'Donethat'
    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Noto+Sans:400,700|Noto+Serif:400,700", :media => "all"
    = stylesheet_link_tag "application"
    = render partial: "google_head" if @google

    %body
      .table-display
        .table-row= render partial: 'navigation'
        .table-row.table-row-expand= yield
        .table-row= render partial: 'footer'
        = render partial: 'shared/google_script' if @google
    = javascript_include_tag "application"